{
    "name": "staylook-design-system",
    "version": "1.0.0",
    "description": "Curved, Editorial, Minimal, Expressive design system - Use Expressive selectively for special moments only",
    "tokens": {
        "colors": {
            "standard": {
                "standard": "#000000",
                "soft": "#4D4D4D",
                "muted": "#9E9E9E"
            },
            "expressive": {
                "expressive": "#3373CC",
                "soft": "#5C9FFF",
                "muted": "#BBDEFB"
            },
            "container": {
                "muted": "#EBEBEB",
                "calm": "#F5F5F5",
                "vibrant": "#FFFFFF"
            },
            "on": {
                "standard": "#000000",
                "expressive": "#3373CC",
                "error": "#D32F2F",
                "success": "#388E3C",
                "warning": "#F57C00",
                "info": "#1976D2"
            },
            "onContainer": {
                "muted": "#666666",
                "calm": "#4D4D4D",
                "vibrant": "#1A1A1A",
                "error": "#B71C1C",
                "success": "#1B5E20",
                "warning": "#E65100",
                "info": "#0D47A1"
            },
            "outline": {
                "standard": "#000000",
                "muted": "#E0E0E0",
                "calm": "#BDBDBD",
                "vibrant": "#1A1A1A",
                "expressive": "#5C9FFF",
                "error": "#EF9A9A",
                "success": "#A5D6A7",
                "warning": "#FFE082",
                "info": "#90CAF9"
            },
            "scrim": {
                "scrim": "rgba(0, 0, 0, 0.3)",
                "modal": "rgba(77, 77, 77, 0.7)",
                "shadow": "rgba(0, 0, 0, 1)",
                "transparent": "rgba(255, 255, 255, 0)",
                "onStandardTransparent": "rgba(255, 255, 255, 0.3)"
            }
        },
        "shadows": {
            "muted": "0 1px 2px rgba(0, 0, 0, 0.04)",
            "calm": "0 4px 8px rgba(0, 0, 0, 0.08)",
            "vibrant": "0 8px 24px rgba(0, 0, 0, 0.12)"
        },
        "radius": {
            "section": "32px",
            "container": "24px",
            "card": "16px",
            "input": "16px",
            "badge": "8px",
            "button": "9999px"
        },
        "typography": {
            "families": {
                "sans": "'Plus Jakarta Sans', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
                "mono": "'SF Mono', Monaco, 'Cascadia Code', 'Courier New', monospace"
            },
            "sizes": {
                "xs": "0.75rem",
                "sm": "0.875rem",
                "base": "1rem",
                "lg": "1.125rem",
                "xl": "1.25rem",
                "2xl": "1.5rem",
                "3xl": "2rem",
                "4xl": "2.5rem",
                "5xl": "3rem"
            },
            "weights": {
                "normal": 400,
                "medium": 500,
                "semibold": 600,
                "bold": 700
            },
            "lineHeights": {
                "tight": 1.25,
                "normal": 1.5,
                "relaxed": 1.75
            }
        },
        "spacing": {
            "0": "0",
            "1": "4px",
            "2": "8px",
            "3": "12px",
            "4": "16px",
            "5": "20px",
            "6": "24px",
            "8": "32px",
            "10": "40px",
            "12": "48px",
            "16": "64px",
            "20": "80px",
            "24": "96px"
        },
        "animation": {
            "durations": {
                "fast": "150ms",
                "base": "300ms",
                "slow": "500ms"
            },
            "easings": {
                "default": "cubic-bezier(0.4, 0, 0.2, 1)",
                "in": "cubic-bezier(0.4, 0, 1, 1)",
                "out": "cubic-bezier(0, 0, 0.2, 1)",
                "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
            }
        },
        "focus": {
            "ringWidth": "2px",
            "ringOffset": "2px",
            "ringColor": "var(--sl-on-expressive)"
        },
        "zIndex": {
            "base": 0,
            "dropdown": 1000,
            "sticky": 1100,
            "fixed": 1200,
            "modalBackdrop": 1300,
            "modal": 1400,
            "popover": 1500,
            "tooltip": 1600
        }
    },
    "darkMode": {
        "colors": {
            "standard": {
                "standard": "#FFFFFF",
                "soft": "#CCCCCC",
                "muted": "#6A6A6A"
            },
            "expressive": {
                "expressive": "#5C9FFF",
                "soft": "#7EB8FF",
                "muted": "#1E3A5F"
            },
            "container": {
                "muted": "#333333",
                "calm": "#292929",
                "vibrant": "#1A1A1A"
            },
            "on": {
                "standard": "#FFFFFF",
                "expressive": "#7EB8FF",
                "error": "#FF8A80",
                "success": "#81C784",
                "warning": "#FFB74D",
                "info": "#64B5F6"
            },
            "onContainer": {
                "muted": "#808080",
                "calm": "#CCCCCC",
                "vibrant": "#F5F5F5",
                "error": "#FFCDD2",
                "success": "#C8E6C9",
                "warning": "#FFECB3",
                "info": "#BBDEFB"
            },
            "outline": {
                "standard": "#FFFFFF",
                "muted": "#424242",
                "calm": "#616161",
                "vibrant": "#FAFAFA",
                "expressive": "#BBDEFB",
                "error": "#D32F2F",
                "success": "#388E3C",
                "warning": "#F57C00",
                "info": "#1976D2"
            }
        }
    }
}